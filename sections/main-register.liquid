<script>
  function dateOfBirth() {
    return {
      day: '',
      month: '',
      year: '',
      years: [],
      months: [
        'January',
        'February',
        'March',
        'April',
        'May',
        'June',
        'July',
        'August',
        'September',
        'October',
        'November',
        'December',
      ],
      init() {
        const currentYear = new Date().getFullYear();
        this.years = Array.from({ length: 50 }, (_, i) => currentYear - i);
      },
    };
  }
</script>


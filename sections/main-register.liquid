                  >
                    <div
                      @click.prevent="month = ''; open = false"
                      class='twcss-cursor-default twcss-select-none twcss-text-2xl twcss-relative twcss-py-2 twcss-px-6 twcss-hover:twcss-bg-slate-800 twcss-hover:twcss-text-white'
                    >
                      Month
                    </div>
                    <template x-for='(monthName, index) in months' :key='index'>
                      <div
                        @click.prevent='month = monthName; open = false'
                        class='twcss-cursor-default twcss-select-none twcss-text-2xl twcss-relative twcss-py-2 twcss-px-6 twcss-hover:twcss-bg-slate-800 twcss-hover:twcss-text-white'
                        x-text='monthName'
                      ></div>
                    </template>
                  </div>
                  <input type='hidden' name='customer[note][birth_month]' :value='months.indexOf(month) + 1'>
                </div>

                <!-- Year Dropdown -->
                <div x-data='{ open: false }' class='twcss-relative'>
                  <button
                    type='button'
                    @click.prevent='open = !open'
                    @click.away='open = false'
                    class='twcss-w-full focus:twcss-outline-none twcss-border-black focus:twcss-ring-1 twcss-ring-slate-800 placeholder:twcss-text-black focus:twcss-shadow-none twcss-outline-none twcss-ring-0 twcss-flex twcss-border twcss-px-6 twcss-py-4 twcss-justify-between twcss-items-center'
                  >
                    <span x-text="year || 'Year'" class='twcss-text-left twcss-flex-grow'></span>
                    <svg
                      class='twcss-h-5 twcss-w-5 twcss-text-gray-400'
                      xmlns='http://www.w3.org/2000/svg'
                      viewBox='0 0 20 20'
                      fill='currentColor'
                      aria-hidden='true'
                    >
                      <path fill-rule="evenodd" d="M5.293 7.293a1 1 0 011.414 0L10 10.586l3.293-3.293a1 1 0 111.414 1.414l-4 4a1 1 0 01-1.414 0l-4-4a1 1 0 010-1.414z" clip-rule="evenodd" />
                    </svg>
                  </button>
                  <div
                    x-show='open'
                    class='twcss-absolute twcss-z-10 twcss-w-full twcss-mt-1 twcss-bg-white twcss-shadow-lg twcss-max-h-60 twcss-rounded-md twcss-py-1 twcss-text-base twcss-ring-1 twcss-ring-black twcss-ring-opacity-5 twcss-overflow-auto twcss-focus:twcss-outline-none twcss-sm:twcss-text-sm'
                  >
                    <div
                      @click.prevent="year = ''; open = false"
                      class='twcss-cursor-default twcss-select-none twcss-text-2xl twcss-relative twcss-py-2 twcss-px-6 twcss-hover:twcss-bg-slate-800 twcss-hover:twcss-text-white'
                    >
                      Year
                    </div>
                    <template x-for='y in years' :key='y'>
                      <div
                        @click.prevent='year = y; open = false'
                        class='twcss-cursor-default twcss-select-none twcss-text-2xl twcss-relative twcss-py-2 twcss-px-6 twcss-hover:twcss-bg-slate-800 twcss-hover:twcss-text-white'
                        x-text='y'
                      ></div>
                    </template>
                  </div>
                  <input type='hidden' name='customer[note][birth_year]' :value='year'>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>

      <div class='twcss-flex twcss-justify-between twcss-items-center'>
        <a href='{{ routes.root_url }}' class='twcss-text-gray-600 twcss-hover:underline'>‹ Back</a>
        <button
          type='submit'
          class='twcss-bg-black twcss-text-white twcss-px-6 twcss-py-2 twcss-rounded twcss-hover:bg-gray-800'
        >
          continue
        </button>
      </div>
    {%- endform -%}
  </div>
</div>


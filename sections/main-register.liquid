          class=' twcss-border twcss-text-left twcss-border-red-400 twcss-text-red-700 twcss-px-4 twcss-py-3 twcss-rounded twcss-relative twcss-mb-6'
        >
          <h2 class='twcss-font-bold twcss-mb-2 twcss-text-2xl' tabindex='-1' autofocus>
            <svg
              class='twcss-inline twcss-w-5 twcss-h-5 twcss-mr-2'
              aria-hidden='true'
              focusable='false'
              fill='currentColor'
              viewBox='0 0 20 20'
            >
              <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7 4a1 1 0 11-2 0 1 1 0 012 0zm-1-9a1 1 0 00-1 1v4a1 1 0 102 0V6a1 1 0 00-1-1z" clip-rule="evenodd" />
            </svg>
            {{ 'templates.contact.form.error_heading' | t }}
          </h2>
          <ul class='twcss-list-disc twcss-list-inside'>
            {%- for field in form.errors -%}
              <li>
                {%- if field == 'form' -%}
                  {{ form.errors.messages[field] }}
                {%- else -%}
                  <a href='#RegisterForm-{{ field }}' class='twcss-underline'>
                    {{ form.errors.translated_fields[field] | capitalize }}
                    {{ form.errors.messages[field] }}
                  </a>
                {%- endif -%}
              </li>
            {%- endfor -%}
          </ul>
        </div>
      {%- endif -%}
      <div class='twcss-pt-4'>
        <h2 class=' twcss-font-semibold twcss-mb-4 twcss-text-3xl twcss-text-left'>Login info</h2>
        <div class=''>
          <div>
            <label for='RegisterForm-email' class='twcss-sr-only'>{{ 'customer.register.email' | t }}</label>
            <input
              type='email'
              name='customer[email]'
              id='RegisterForm-email'
              autocomplete='email'
              placeholder='{{ 'customer.register.email' | t }}'
              class='twcss-w-full focus:twcss-outline-none twcss-border-black focus:twcss-ring-1 twcss-ring-slate-800 placeholder:twcss-text-black  focus:twcss-shadow-none twcss-outline-none twcss-ring-0  twcss-flex twcss-border twcss-px-6 twcss-py-4'
              required
            >
          </div>
          <div>
            <label for='RegisterForm-password' class='twcss-sr-only'>{{ 'customer.register.password' | t }}</label>
            <input
              type='password'
              name='customer[password]'
              id='RegisterForm-password'
              placeholder='{{ 'customer.register.password' | t }}'
              class='twcss-w-full focus:twcss-outline-none twcss-border-black focus:twcss-ring-1 twcss-ring-slate-800 placeholder:twcss-text-black  focus:twcss-shadow-none twcss-outline-none twcss-ring-0  twcss-flex twcss-border twcss-px-6 twcss-py-4'
              required
            >
          </div>
          {% comment %}
            <div>
              <label for='RegisterForm-password-confirm' class='twcss-sr-only'>
                {{- 'customer.register.password_confirm' | t -}}
              </label>
              <input
                type='password'
                name='customer[password_confirmation]'
                id='RegisterForm-password-confirm'
                placeholder='{{ 'customer.register.password_confirm' | t }}'
                class='twcss-w-full twcss-p-3 twcss-border twcss-border-gray-300 twcss-rounded'
                required
              >
